<Window x:Class="DesktopContactsApp.ContactDetailsWindoww"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindoww" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="name_TextBox" Margin="0,0,0,5" ></TextBox>
            <TextBox x:Name="email_TextBox" Margin="0,0,0,5" ></TextBox>
            <TextBox x:Name="phone_TextBox" Margin="0,0,0,5" ></TextBox>
            <Button x:Name="update_btn" Margin="0,0,0,5" Content="Update" Click="Update_btn_Click" />
            <Button x:Name="delete_btn" Margin="0,0,0,5" Content="Delete" Click="Delete_btn_Click" Foreground="White" Background="Red" />
        </StackPanel>
    </Grid>
</Window>
